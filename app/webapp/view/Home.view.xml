 <mvc:View controllerName="com.ssg.myUI5App.controller.Home"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <App id="idAppControl" >
    <pages>
      <Page title="{i18n>title}">
        <headerContent>
        </headerContent>
        <content>
          <MessageStrip
            text="Hello {local>/name}"
            type="Success"
            showIcon="true"
            showCloseButton="false"
            class="sapUiMediumMarginBottom">
          </MessageStrip>
          <Button text="Default"
              press="onPress"
              ariaDescribedBy="defaultButtonDescription genericButtonDescription">
				  </Button>
        </content>
        <footer/>
      </Page>
    </pages>
  </App>
</mvc:View>
